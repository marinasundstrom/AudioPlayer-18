<?xml version="1.0" encoding="UTF-8"?>
<ContentPage x:Class="Axis.AudioPlayer.Views.AddDeviceCustomPage" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:controls="clr-namespace:Axis.AudioPlayer.Controls" xmlns:local="clr-namespace:Axis.AudioPlayer" xmlns:validation="clr-namespace:Axis.AudioPlayer.Validation" Title="Add device" BindingContext="{Binding AddCustomDevice, Source={StaticResource Locator}}">
	<StackLayout>
		<StackLayout.Margin>
			<OnPlatform x:TypeArguments="Thickness">
				<On Platform="iOS">16</On>
			</OnPlatform>
		</StackLayout.Margin>
		<StackLayout BindingContext="{Binding Step1}">
			<StackLayout Margin="0,10,0,0">
				<Entry Placeholder="IP Address" Text="{Binding IPAddress}">
					<Entry.Behaviors>
						<validation:EntryValidationBehavior PropertyName="IPAddress" />
					</Entry.Behaviors>
				</Entry>
			</StackLayout>
			<controls:AddDeviceUserControl />
		</StackLayout>
		<Button Command="{Binding FinishStep1Command}" Text="Next" />
	</StackLayout>
</ContentPage>