<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Axis.AudioPlayer.Views.LibraryPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:Axis.AudioPlayer.Behaviors"
    xmlns:local="clr-namespace:Axis.AudioPlayer"
    Title="{Binding Playlist.Name}"
    BindingContext="{Binding Library, Source={StaticResource Locator}}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="TrackItemTemplate">
                <ImageCell
                    ImageSource="musical_notes_30.png"
                    StyleId="disclosure-button"
                    Text="{Binding Title}"
					Detail="{Binding Artist}" />
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ListView
        ItemTemplate="{StaticResource TrackItemTemplate}"
        ItemsSource="{Binding Tracks}"
        SelectedItem="{Binding SelectedTrack, Mode=TwoWay}">
        <ListView.Behaviors>
            <behaviors:EventToCommandBehavior
                Command="{Binding NavigateToTrackCommand}"
                EventArgsPropertyPath="Item"
                EventName="ItemTapped" />
        </ListView.Behaviors>
    </ListView>
</ContentPage>
